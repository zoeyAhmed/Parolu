<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>im.bernard.Parolu.desktop</id>
  <name>Parolu</name>
  <summary>Read text out aloud</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <developer_name>Bernard</developer_name>

  <description>
    <p>
      Parolu allows you to generate audio from text using different voices. This happens exclusively offline
      and on your device, which is great for privacy.
    </p>
    <p>
      It's built on the Piper synthesizer library and supports voices for different languages including German,
      Italian, French, Spanish, and even Esperanto!
    </p>
  </description>

  <launchable type="desktop-id">im.bernard.Parolu.desktop</launchable>

